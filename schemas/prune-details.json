{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Dicklesworthstone/doodlestein_self_releaser/schemas/prune-details.json",
  "title": "DSR Prune Details",
  "description": "Details payload for 'dsr prune' command",
  "type": "object",
  "required": ["state_dir", "dry_run", "pruned_count", "bytes_freed"],
  "properties": {
    "state_dir": {
      "type": "string",
      "description": "State directory being pruned"
    },
    "dry_run": {
      "type": "boolean",
      "description": "Whether this was a dry run"
    },
    "cutoff_days": {
      "type": "integer",
      "minimum": 0,
      "description": "Age threshold for pruning"
    },
    "keep_last": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of recent items to keep"
    },
    "pruned_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of items pruned"
    },
    "bytes_freed": {
      "type": "integer",
      "minimum": 0,
      "description": "Total bytes freed"
    },
    "pruned_paths": {
      "type": "array",
      "items": { "$ref": "#/$defs/pruned_item" },
      "description": "List of pruned files"
    },
    "errors": {
      "type": "array",
      "items": { "$ref": "#/$defs/prune_error" },
      "description": "Errors encountered during pruning"
    }
  },
  "$defs": {
    "pruned_item": {
      "type": "object",
      "required": ["path", "size_bytes"],
      "properties": {
        "path": { "type": "string" },
        "size_bytes": { "type": "integer", "minimum": 0 },
        "mtime": { "type": "string", "format": "date-time" }
      }
    },
    "prune_error": {
      "type": "object",
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "path": { "type": "string" }
      }
    }
  }
}
