{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Dicklesworthstone/doodlestein_self_releaser/schemas/repos-details.json",
  "title": "DSR Repos Details",
  "description": "Details payload for 'dsr repos' command",
  "type": "object",
  "required": ["action"],
  "properties": {
    "action": {
      "type": "string",
      "enum": ["list", "add", "remove", "validate", "discover", "sync"],
      "description": "Repos subcommand"
    },
    "repo": {
      "type": "string",
      "description": "Repo name (owner/repo or short name)"
    },
    "repos": {
      "type": "array",
      "items": { "$ref": "#/$defs/repo_entry" },
      "description": "Repository entries"
    },
    "added": {
      "type": "array",
      "items": { "$ref": "#/$defs/repo_entry" },
      "description": "Repositories added"
    },
    "removed": {
      "type": "array",
      "items": { "$ref": "#/$defs/repo_entry" },
      "description": "Repositories removed"
    },
    "validated": {
      "type": "array",
      "items": { "$ref": "#/$defs/validation_result" },
      "description": "Validation results"
    },
    "discovered": {
      "type": "array",
      "items": { "$ref": "#/$defs/repo_entry" },
      "description": "Discovered repositories"
    },
    "errors": {
      "type": "array",
      "items": { "$ref": "#/$defs/repos_error" },
      "description": "Errors encountered"
    }
  },
  "$defs": {
    "repo_entry": {
      "type": "object",
      "required": ["name", "repo"],
      "properties": {
        "name": { "type": "string" },
        "repo": { "type": "string" },
        "local_path": { "type": "string" },
        "language": { "type": "string" },
        "workflow": { "type": "string" },
        "enabled": { "type": "boolean" },
        "targets": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "validation_result": {
      "type": "object",
      "required": ["repo", "status"],
      "properties": {
        "repo": { "type": "string" },
        "status": { "type": "string", "enum": ["ok", "warn", "error"] },
        "message": { "type": "string" }
      }
    },
    "repos_error": {
      "type": "object",
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "repo": { "type": "string" }
      }
    }
  }
}
