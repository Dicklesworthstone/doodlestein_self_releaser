{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Dicklesworthstone/doodlestein_self_releaser/schemas/status-details.json",
  "title": "DSR Status Details",
  "description": "Details payload for 'dsr status' command",
  "type": "object",
  "required": ["generated_at", "overall_status"],
  "properties": {
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Time the status was generated"
    },
    "overall_status": {
      "type": "string",
      "enum": ["ok", "degraded", "error"],
      "description": "Overall system health"
    },
    "config": {
      "type": "object",
      "properties": {
        "valid": { "type": "boolean" },
        "path": { "type": "string" },
        "schema_version": { "type": "string" }
      },
      "description": "Configuration summary"
    },
    "hosts": {
      "type": "array",
      "items": { "$ref": "#/$defs/host_status" },
      "description": "Per-host health summary"
    },
    "repos": {
      "type": "object",
      "properties": {
        "total": { "type": "integer", "minimum": 0 },
        "enabled": { "type": "integer", "minimum": 0 },
        "disabled": { "type": "integer", "minimum": 0 }
      },
      "description": "Repository registry summary"
    },
    "queue": {
      "type": "object",
      "properties": {
        "throttled_count": { "type": "integer", "minimum": 0 },
        "threshold_seconds": { "type": "integer", "minimum": 0 }
      },
      "description": "Queue/throttling summary"
    },
    "last_run": {
      "$ref": "#/$defs/run_summary"
    },
    "warnings": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Non-fatal status warnings"
    }
  },
  "$defs": {
    "host_status": {
      "type": "object",
      "required": ["host", "status"],
      "properties": {
        "host": {
          "type": "string",
          "description": "Host identifier"
        },
        "platform": {
          "type": "string",
          "description": "Platform for the host"
        },
        "status": {
          "type": "string",
          "enum": ["ok", "warn", "error", "unknown"],
          "description": "Host status"
        },
        "last_checked_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of last check"
        },
        "latency_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Health check latency"
        },
        "message": {
          "type": "string",
          "description": "Additional context"
        }
      }
    },
    "run_summary": {
      "type": "object",
      "required": ["command", "status", "exit_code"],
      "properties": {
        "command": {
          "type": "string",
          "description": "Command name"
        },
        "status": {
          "type": "string",
          "enum": ["success", "partial", "error"],
          "description": "Run status"
        },
        "exit_code": {
          "type": "integer",
          "minimum": 0,
          "description": "Process exit code"
        },
        "run_id": {
          "type": "string",
          "format": "uuid",
          "description": "Run identifier"
        },
        "started_at": {
          "type": "string",
          "format": "date-time",
          "description": "Run start time"
        },
        "completed_at": {
          "type": "string",
          "format": "date-time",
          "description": "Run completion time"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Run duration"
        }
      }
    }
  }
}
